    "type": "profile",
    "preferences": [
        {
            "name": "ipAddress",
            "title": "Camera IP Address",
            "description": "Enter the IP address of the camera",
            "required": true,
            "displayType": "textField",
            "textField": {
                "value": "ipAddress",
                "minLength": 7,
                "maxLength": 15,
                "defaultValue": "192.168.1.100"
            }
        },
        {
            "name": "port",
            "title": "Camera Port",
            "description": "Enter the port number of the camera",
            "required": false,
            "displayType": "numberField",
            "numberField": {
                "value": "port",
                "range": [
                    1,
                    65535
                ],
                "defaultValue": 80
            }
        },
        {
            "name": "userid",
            "title": "Camera Username",
            "description": "Enter the username for camera authentication",
            "required": true,
            "displayType": "textField",
            "textField": {
                "value": "userid",
                "minLength": 1,
                "maxLength": 50,
                "defaultValue": "admin"
            }
        },
        {
            "name": "password",
            "title": "Camera Password",
            "description": "Enter the password for camera authentication (avoid special characters like @, &, etc.)",
            "required": true,
            "displayType": "textField",
            "textField": {
                "value": "password",
                "minLength": 1,
                "maxLength": 50,
                "defaultValue": "password",
                "type": "password"
            }
        },
        {
            "name": "stream",
            "title": "Stream Type",
            "description": "Select the stream type (mainstream or substream)",
            "required": false,
            "displayType": "list",
            "list": {
                "value": "stream",
                "options": [
                    {
                        "name": "Main Stream",
                        "value": "mainstream"
                    },
                    {
                        "name": "Sub Stream",
                        "value": "substream"
                    }
                ],
                "defaultValue": "mainstream"
            }
        },
        {
            "name": "enableTwoWayAudio",
            "title": "Enable Two-Way Audio",
            "description": "Enable two-way audio if supported",
            "required": false,
            "displayType": "toggleSwitch",
            "toggleSwitch": {
                "value": "enableTwoWayAudio",
                "defaultValue": false
            }
        },
        {
            "name": "audioFilePath",
            "title": "Audio File Path",
            "description": "Path to audio file for quick reply",
            "required": false,
            "displayType": "textField",
            "textField": {
                "value": "audioFilePath",
                "minLength": 1,
                "maxLength": 100,
                "defaultValue": "/default/audio.wav"
            }
        },
        {
            "name": "quickReply",
            "title": "Quick Reply Message",
            "description": "Message to play when doorbell is pressed",
            "required": false,
            "displayType": "textField",
            "textField": {
                "value": "quickReply",
                "minLength": 1,
                "maxLength": 50,
                "defaultValue": "Please wait."
            }
        },
        {
            "name": "nvrIp",
            "title": "NVR IP Address",
            "description": "Enter the IP address of the NVR (optional)",
            "required": false,
            "displayType": "textField",
            "textField": {
                "value": "nvrIp",
                "minLength": 0,
                "maxLength": 15,
                "defaultValue": ""
            }
        },
        {
            "name": "rtspPath",
            "title": "RTSP Stream Path",
            "description": "Enter the RTSP stream path (e.g., h264Preview_01_main)",
            "required": true,
            "displayType": "textField",
            "textField": {
                "value": "rtspPath",
                "minLength": 1,
                "maxLength": 50,
                "defaultValue": "h264Preview_01_main"
            }
        },
        {
            "name": "rtspPort",
            "title": "RTSP Port",
            "description": "Enter the RTSP port number of the camera",
            "required": false,
            "displayType": "numberField",
            "numberField": {
                "value": "rtspPort",
                "range": [
                    1,
                    65535
                ],
                "defaultValue": 554
            }
        }
    ]
}